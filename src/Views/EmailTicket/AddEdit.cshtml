@model src.Models.EmailTicket
@{
    Layout = null;
}

<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title">Add / Edit Ticket</h4>
</div>
<form onsubmit="return SubmitAddEdit(this)">
    <div class="box-body">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @*<input type="hidden" asp-for="ticketId" />
            <input type="hidden" asp-for="organizationId" />
            <input type="hidden" asp-for="customerId" />*@
        <div class="row">
            <div class="col-lg-4">
                <div class="form-group">
                    <label asp-for="TicketNo" class="control-label"></label>
                    <textarea asp-for="TicketNo" class="form-control" asp-items="@ViewBag.TicketNo" readonly="readonly"></textarea>
                    <span asp-validation-for="TicketNo" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="form-group">
                    <label asp-for="EmailFrom" class="control-label"></label>
                    <textarea asp-for="EmailFrom" class="form-control" asp-items="@ViewBag.EmailFrom" readonly="readonly"></textarea>
                    <span asp-validation-for="EmailFrom" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="form-group">
                    <label asp-for="EmailTo" class="control-label"></label>
                    <textarea asp-for="EmailTo" class="form-control" asp-items="@ViewBag.EmailTo" readonly="readonly"></textarea>
                    <span asp-validation-for="EmailTo" class="text-danger"></span>
                </div>
            </div>

        </div>
        <div class="form-group">
            <label asp-for="EmailSubject" class="control-label"></label>
            <textarea asp-for="EmailSubject" class="form-control" asp-items="@ViewBag.EmailSubject" readonly="readonly"></textarea>
            <span asp-validation-for="EmailSubject" class="text-danger"></span>
        </div>
        <div class="form-group">


            <label asp-for="EmailContent" class="control-label"></label>
            <textarea asp-for="EmailContent" class="form-control" asp-items="@ViewBag.EmailContent" readonly="readonly"></textarea>
            <span asp-validation-for="EmailContent" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="AssignedTo" class="control-label"></label>
            <textarea asp-for="AssignedTo" class="form-control" asp-items="@ViewBag.AssignedTo" readonly="readonly"></textarea>
            <span asp-validation-for="AssignedTo" class="text-danger"></span>

            <div class="form-group">

                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="EmailDateTime" class="control-label"></label>
                        <textarea asp-for="EmailDateTime" class="form-control" asp-items="@ViewBag.EmailDateTime" readonly="readonly"></textarea>
                        <span asp-validation-for="EmailDateTime" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="ReplyStatus" class="control-label"></label>
                        <textarea asp-for="ReplyStatus" class="form-control" asp-items="@ViewBag.ReplyStatus" readonly="readonly"></textarea>
                        <span asp-validation-for="ReplyStatus" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="form-group">
                        <label asp-for="RepliedBy" class="control-label"></label>
                        <textarea asp-for="RepliedBy" class="form-control" asp-items="@ViewBag.RepliedBy" readonly="readonly"></textarea>
                        <span asp-validation-for="RepliedBy" class="text-danger"></span>
                    </div>
                </div>
               
            </div>
            <div class="form-group">

                <div class="form-group">

                    <label asp-for="ReplyCustomer" class="control-label"></label>
                    <textarea asp-for="ReplyCustomer" class="form-control" style="min-width:100%"></textarea>

                    <span asp-validation-for="ReplyCustomer" class="text-danger"></span>
                </div>

            </div>



        </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary pull-right"><i class="fa fa-save"></i> Reply Message</button>
            <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Cancel</button>
      
        </div>
    </div>
</form>
<script>
    Ladda.bind('.btn', { timeout: 1000 });
</script>


